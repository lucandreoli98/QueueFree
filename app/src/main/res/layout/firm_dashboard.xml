<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/Dash"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Dashboard"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/quantum_orange300"
        android:textStyle="italic">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_round_orange"
            android:src="@drawable/ic_baseline_settings_24">

        </ImageButton>

        <ImageButton
            android:id="@+id/books"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignLeft="@+id/settings"
            android:layout_marginLeft="236dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_round_orange"
            android:src="@drawable/ic_event_white">

        </ImageButton>

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/settings"
            android:layout_marginTop="20dp"
            android:textColor="@color/quantum_orange300"
            android:text="Impostazioni"
            android:textAlignment="center"
            android:textSize="30dp">

        </TextView>


        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/books"
            android:layout_marginTop="20dp"
            android:textColor="@color/quantum_orange300"
            android:text="Prenotazioni"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginLeft="236dp">

        </TextView>

        <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@+id/books"
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_round_orange"
            android:text="Logout"
            android:textColor="@color/white">

        </Button>
    </RelativeLayout>

</LinearLayout>